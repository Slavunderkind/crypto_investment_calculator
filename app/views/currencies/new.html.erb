<%= form_for :currency, url: currencies_path do |c| %>
    <%= c.label :crypto_name, 'Convert crypto' %>
    <%= c.select :name, ['BTC', 'ETH'] %>

    <%= c.label :amount, 'Amount' %>
    <%= c.text_field :amount, placeholder: 'Amount', required: 'required' %>

    <%= c.label :fiat_name, 'Convert in' %>
    <%= c.select :fiat_name, ['USD', 'EUR'] %>

    <%= c.submit 'Convert' %>
<% end %>